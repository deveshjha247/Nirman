# =============================================================================
# Nirman Backend - Environment Variables Template
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Core Settings
# -----------------------------------------------------------------------------
APP_ENV=development
DEBUG=true

# -----------------------------------------------------------------------------
# Database (MongoDB)
# -----------------------------------------------------------------------------
MONGO_URL=mongodb://localhost:27017
DB_NAME=nirman

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
ENCRYPTION_KEY=your-fernet-encryption-key-base64-encoded

# -----------------------------------------------------------------------------
# AI Providers - Add keys for providers you want to use
# -----------------------------------------------------------------------------

# US/Global Providers
OPENAI_API_KEY=sk-...
GEMINI_API_KEY=AI...
CLAUDE_API_KEY=sk-ant-...
GROK_API_KEY=xai-...
MISTRAL_API_KEY=
COHERE_API_KEY=
GROQ_API_KEY=gsk_...
TOGETHER_API_KEY=
PERPLEXITY_API_KEY=pplx-...
FIREWORKS_API_KEY=
AI21_API_KEY=

# Chinese AI Providers
DEEPSEEK_API_KEY=sk-...
QWEN_API_KEY=
MOONSHOT_API_KEY=
YI_API_KEY=
ZHIPU_API_KEY=

# Open Source
HUGGINGFACE_API_KEY=hf_...

# Default AI Provider (openai, gemini, claude, deepseek, etc.)
DEFAULT_AI_PROVIDER=gemini

# -----------------------------------------------------------------------------
# Payment Providers
# -----------------------------------------------------------------------------

# Cashfree
CASHFREE_APP_ID=
CASHFREE_SECRET_KEY=
CASHFREE_ENV=sandbox

# Razorpay
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# -----------------------------------------------------------------------------
# Third-Party Integrations
# -----------------------------------------------------------------------------

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Vercel
VERCEL_CLIENT_ID=
VERCEL_CLIENT_SECRET=

# Canva
CANVA_CLIENT_ID=
CANVA_CLIENT_SECRET=

# MongoDB Atlas (for monitoring)
MONGODB_ATLAS_PUBLIC_KEY=
MONGODB_ATLAS_PRIVATE_KEY=

# -----------------------------------------------------------------------------
# Frontend URL (for CORS)
# -----------------------------------------------------------------------------
FRONTEND_URL=http://localhost:3000
